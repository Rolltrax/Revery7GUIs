{
  "name": "revery-7guis",
  "author": "Zach Baylin",
  "scripts": {
    "format": "dune build @fmt --auto-promote",
    "hot-reload": "esy #{os == 'windows' ? 'b ' : ''}dune exec src/Revery7Guis.bc #{self.target_dir}",
    "run": "esy x Revery7Guis"
  },
  "esy": {
    "build": [
      [ "dune", "build", "-p", "Revery7Guis", "-j4" ]
    ],
    "buildDev": [
      [ "refmterr", "dune", "build", "-j4" ]
    ]
  },
  "dependencies": {
    "@esy-ocaml/reason": "^3.4.0",
    "@opam/dune": ">1.6.0 <=2.0.1",
    "revery": "github:revery-ui/revery#feat/hot-reload"
  },
  "devDependencies": {
    "ocaml": ">=4.6.0 <4.10.0",
    "refmterr": "^3.3.0",
    "@opam/merlin": "^3.3.2"
  }
}
